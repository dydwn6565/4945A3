@model IEnumerable<TPT.Models.Course>

@{
    ViewBag.Title = "Student Courses";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("List Courses", "ListCourses", new { id = (int)ViewBag.ID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.ActionLink("Remove", "RemoveCourse", new { CourseID = item.ID, StudentID = (int)ViewBag.ID })
            </td>
        </tr>
    }

</table>
